{
	"name": "@poly-state/core",
	"version": "1.1.5",
	"description": "A boilerplate free simple state management library",
	"main": "dist/index.js",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"types": "./dist/index.d.ts",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "@swc/jest"
		}
	},
	"devDependencies": {
		"@swc/core": "^1.2.210",
		"@swc/jest": "^0.2.21",
		"@types/jest": "^28.1.4",
		"@types/react": "^18.0.15",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint": "^8.19.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"jest": "^28.1.2",
		"preact": "^10.9.0",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"rimraf": "^3.0.2",
		"solid-js": "^1.4.7",
		"typescript": "^4.7.4"
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"test": "jest",
		"lint": "eslint src/**/*.{ts,tsx}",
		"format:check": "prettier -c ./",
		"format": "prettier -c -w ./"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/poly-state/poly-state.git",
		"directory": "packages/core"
	},
	"bugs": {
		"url": "https://github.com/poly-state/poly-state/issues"
	},
	"homepage": "https://github.com/poly-state/poly-state"
}
