{
	"name": "@poly-state/core",
	"version": "1.3.0",
	"description": "A boilerplate free simple state management library",
	"main": "dist/index.js",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "@swc/jest"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/poly-state/poly-state.git",
		"directory": "packages/core"
	},
	"bugs": {
		"url": "https://github.com/poly-state/poly-state/issues"
	},
	"homepage": "https://github.com/poly-state/poly-state",
	"scripts": {
		"build": "tsup",
		"test": "jest",
		"lint": "eslint src/**/*.{ts,tsx}",
		"format:check": "prettier --check ./",
		"format": "prettier --check --write ./"
	},
	"devDependencies": {
		"@swc/core": "^1.2.246",
		"@swc/jest": "^0.2.22",
		"@types/jest": "^29.0.0",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"eslint": "^8.23.0",
		"jest": "^29.0.2",
		"prettier": "^2.7.1",
		"tsup": "^6.2.3",
		"typescript": "^4.8.2"
	},
	"keywords": [
		"react",
		"preact",
		"svelte",
		"state",
		"manager",
		"management",
		"redux",
		"store",
		"poly-state"
	]
}
