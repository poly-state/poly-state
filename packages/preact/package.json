{
	"name": "@poly-state/preact",
	"version": "3.0.0",
	"description": "Poly State Preact",
	"main": "dist/index.js",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "tsup src/index.ts --dts --outDir dist --format esm,cjs --clean",
		"lint": "eslint --fix src/**/*.{ts,tsx}",
		"format:check": "prettier --check ./",
		"format": "prettier --check --write ./"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/poly-state/poly-state.git",
		"directory": "packages/preact"
	},
	"bugs": {
		"url": "https://github.com/poly-state/poly-state/issues"
	},
	"homepage": "https://github.com/poly-state/poly-state",
	"keywords": [
		"react",
		"preact",
		"svelte",
		"state",
		"manager",
		"management",
		"redux",
		"store",
		"poly-state"
	],
	"devDependencies": {
		"@poly-state/core": "*",
		"eslint": "^8.35.0",
		"preact": "^10.13.0",
		"tsup": "^6.6.3",
		"typescript": "^4.9.5",
		"prettier": "^2.8.4",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1"
	},
	"peerDependencies": {
		"@poly-state/core": "^1.3.0",
		"preact": "^10.9.0"
	}
}
