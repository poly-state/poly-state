{
	"name": "@poly-state/react",
	"version": "2.0.0",
	"description": "React bindings for React",
	"main": "dist/index.js",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"devDependencies": {
		"@poly-state/core": "*",
		"@swc/core": "^1.2.210",
		"@swc/jest": "^0.2.21",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@types/jest": "^28.1.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint": "^8.19.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"jest": "^28.1.2",
		"jest-environment-jsdom": "^28.1.2",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rimraf": "^3.0.2",
		"tsup": "^6.1.3",
		"typescript": "^4.7.4"
	},
	"peerDependencies": {
		"@poly-state/core": "^1.2.0",
		"react": "^16.8.6"
	},
	"scripts": {
		"build": "tsup",
		"lint": "eslint --fix src/**/*.{ts,tsx}",
		"test": "jest",
		"format:check": "prettier --check ./",
		"format": "prettier --check --write ./"
	},
	"jest": {
		"transform": {
			"^.+\\.(t|j)sx?$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript",
							"tsx": true
						},
						"transform": {
							"react": {
								"runtime": "automatic"
							}
						}
					},
					"module": {
						"type": "commonjs"
					}
				}
			]
		},
		"testRegex": "src/tests/.*\\.spec\\.tsx?$",
		"testEnvironment": "jsdom"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/poly-state/poly-state.git",
		"directory": "packages/react"
	},
	"bugs": {
		"url": "https://github.com/poly-state/poly-state/issues"
	},
	"homepage": "https://github.com/poly-state/poly-state"
}
