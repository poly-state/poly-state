{
	"name": "@poly-state/poly-state",
	"version": "1.1.2",
	"description": "A boilerplate free simple state management library",
	"main": "dist/index.js",
	"author": "Shahriar Shojib",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"types": "./dist/index.d.ts",
	"dependencies": {},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "@swc/jest"
		}
	},
	"devDependencies": {
		"@swc/core": "^1.2.123",
		"@swc/jest": "^0.2.15",
		"@types/jest": "^27.0.3",
		"@types/react": "^17.0.37",
		"@typescript-eslint/eslint-plugin": "^5.6.0",
		"@typescript-eslint/parser": "^5.6.0",
		"eslint": "^8.4.1",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"jest": "^27.4.5",
		"preact": "^10.6.4",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"rimraf": "^3.0.2",
		"solid-js": "^1.2.6",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"ci": "yarn --frozen-lockfile",
		"test": "jest",
		"test:watch": "jest --watch",
		"format": "prettier -c -w src/**/*",
		"lint:fix": "eslint --fix src/**/*.{ts,tsx}",
		"lint": "eslint  src/**/*.{ts,tsx}",
		"format:check": "prettier -c src/**/*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/poly-state/poly-state.git"
	},
	"bugs": {
		"url": "https://github.com/poly-state/poly-state/issues"
	},
	"homepage": "https://github.com/poly-state/poly-state"
}
